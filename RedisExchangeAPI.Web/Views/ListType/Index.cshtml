@model List<string>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-action="DeleteFirst">Delete First Item</a>

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <button type="submit">Kaydet</button>
